@using RingoMedia.PL.ViewModels
@model ReminderViewModel


<h2>Create Reminder</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReminderDateTime" class="control-label"></label>
        <input asp-for="ReminderDateTime" class="form-control" />
        <span asp-validation-for="ReminderDateTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

