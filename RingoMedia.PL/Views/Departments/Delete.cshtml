@using RingoMedia.PL.ViewModels
@model DepartmentDetailsViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>Are you sure you want to delete this department?</h4>
<hr />
<div>
    <h4>Department</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LogoPath)
        </dt>
        <dd class="col-sm-10">
            @if (Model.LogoPath != null)
            {
                <img src="@Model.LogoPath" alt="@Model.Name" style="max-width: 100px;" />
            }
            else
            {
                <p>No logo available.</p>
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
